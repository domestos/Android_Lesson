<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toest 1"
        android:id="@+id/btnToest1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_alignTop="@+id/btnToest2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onSoweToest1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toest 2"
        android:id="@+id/btnToest2"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btnToest1"
        android:layout_toEndOf="@+id/btnToest1"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:onClick="onSoweToest2" />
</RelativeLayout>