<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tvGetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/getName" />

    <TextView
        android:id="@+id/tvGetSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGetName"
        android:layout_marginTop="20dp"
        android:onClick="showActivity"
        android:text="@string/getSurname" />

    <Button
        android:id="@+id/btnSayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGetSurname"
        android:layout_marginTop="20dp"
        android:onClick="showActivity"
        android:text="@string/btnSayName" />

    <Button
        android:id="@+id/btnSaySurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSayName"
        android:layout_marginTop="20dp"
        android:onClick="showActivity"
        android:text="@string/btnSaySurname" />
</RelativeLayout>
