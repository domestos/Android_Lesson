<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vpelenskyi.lesson009.MainActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:clickable="true"
        android:text="Lesson9-10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button

        android:id="@+id/btn_method_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Method 1" />

    <Button
        android:id="@+id/btn_method_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Method 2" />

    <Button
        
        android:id="@+id/btn_method_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Method 3" />

</LinearLayout>
